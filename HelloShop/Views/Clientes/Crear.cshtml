@model HelloShop.Models.Entities.Cliente



<h1>@ViewBag.titulo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="formulario" asp-action="Crear" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDocumentoId" class="control-label"></label>
                <select asp-items="@ViewBag.TiposDocumento" asp-for="TipoDocumentoId" class="form-control">
                    <option disabled>--- Seleccione ---</option>
                </select>
                <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="submit-all" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script>
    @if (TempData["Accion"] != null && TempData["Accion"].ToString().Equals("Validacion"))
    {
        <text>
            alertify.set('notifier', 'position', 'top-right');
            alertify.warning('@TempData["Mensaje"]');

        </text>
    }
    </script>
    <script>
        var submitButton = document.querySelector("#submit-all");
        submitButton.addEventListener("click", function () {

        if (!$("#formulario").valid()) { //check if form is valid using model annotation
                alertify.set('notifier', 'position', 'top-right');
                alertify.warning('Debe ingresar todos los campos');
            }
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
